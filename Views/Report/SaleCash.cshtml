@model jotun.Models.ReportSaleCashFilterModel
@using ReportViewerForMvc;
@{
    ViewBag.Title = "SaleCash";
    ViewBag.reportsalecashactive = "aactive";
}

<style>
    #printerDiv iframe {
        position: absolute;
        top: -1000px;
    }
    /*#ReportViewer1_ReportViewer{
        width:100% !important;
    }*/
</style>

@using (Html.BeginForm("SaleCash", "Report", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div style="background-color:#e9ecef; padding:15px;">
        <h4>Sale Cash Report</h4>
        <div class="container-fluid">
            <div class="col-md-12" style="background-color:transparent;">
                <div class="col-md-12" style="background-color:transparent">
                    <div class="row">
                        <div class="col-md-2 ">
                            <span>From Date:</span>
                            @Html.TextBoxFor(m => m.dateFrom, htmlAttributes: new { @class = "form-control", @id = "dateFrom", autocomplete = "off", @placeholder = "DD-MMM-YY" })
                        </div>

                        <div class="col-md-2">
                            <span>To Date:</span>
                            @Html.TextBoxFor(m => m.dateTo, htmlAttributes: new { @class = "form-control", id = "dateTo", autocomplete = "off", @placeholder = "DD-MMM-YY" })
                        </div>

                        @*<div class="col-md-2">
                            <span>Customer:</span>
                            @Html.TextBoxFor(m => m.customterName, new { id = "customterName", @class = "form-control CustomerName", autocomplete = "off", @placeholder = "All" })
                            @Html.TextBoxFor(m => m.customerId, new { id = "customerId", @class = "form-control", @type = "hidden" })
                        </div>

                        <div class="col-md-2">
                            <span>Phone:</span>
                            @Html.TextBoxFor(m => m.customerPhone, new { id = "custphone", @class = "form-control CustomerName", autocomplete = "off", @placeholder = "All" })
                        </div>*@

                        <div class="col-md-4">
                            <input style="margin-top:25px" type="submit" class="btn btn-success" value="Generate" />
                            <input style="margin-top:25px" class="btn btn-danger" type="button" value="Back" onclick="window.location='/Home';" />
                            <input style="margin-top:25px" class="btn btn-success" type="button" value="Print" onclick="funExportToPDF()" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr />

        <div class="panel-body" style="background-color:white;width:100% !important;">
            <div class="text-center">
                @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer@*, new {@class="rp-width"}*@)
            </div>
        </div>

    </div>
}

@section scripts{
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#dateFrom').datepicker({
                dateFormat: 'dd-MM-yy'
            });
            $('#dateTo').datepicker({
                dateFormat: 'dd-MM-yy'
            });
        });

    </script>
}